name: Deploy Docs (manual)
on:
  workflow_dispatch: {}
  push:
    tags:
      - 'pages-deploy/*'
permissions:
  contents: write
  pages: write
jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-python@v5
        with:
          python-version: "3.11"
      - run: |
          python -m pip install --upgrade pip
          pip install mkdocs mkdocs-material
          mkdocs build --clean
          mkdocs gh-deploy --force
