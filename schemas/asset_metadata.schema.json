{
"$schema": "https://json-schema.org/draft/2020-12/schema
",
"title": "1kUSD Collateral Asset Metadata (v1)",
"type": "object",
"properties": {
"address": { "type": "string", "pattern": "^0x[0-9a-fA-F]{40}$" },
"symbol": { "type": "string", "minLength": 2, "maxLength": 16 },
"name": { "type": "string", "minLength": 2, "maxLength": 64 },
"decimals":{ "type": "integer", "minimum": 0, "maximum": 36 },
"chainId": { "type": "integer", "minimum": 1 },
"risk": {
"type": "object",
"properties": {
"isStable": { "type": "boolean" },
"fot": { "type": "boolean", "description": "fee-on-transfer token" },
"maxExposureBps": { "type": "integer", "minimum": 0, "maximum": 10000 }
},
"required": ["isStable", "fot", "maxExposureBps"],
"additionalProperties": false
},
"oracle": {
"type": "object",
"properties": {
"sources": { "type": "array", "items": { "type": "string" } },
"decimalsOut": { "type": "integer", "minimum": 0, "maximum": 36 }
},
"required": ["sources", "decimalsOut"],
"additionalProperties": false
}
},
"required": ["address","symbol","name","decimals","chainId","risk","oracle"],
"additionalProperties": false
}
